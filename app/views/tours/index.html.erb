<main>
  <section>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag("landing_page/ephesus_5.jpg", class: "d-block w-100")  %>
        </div>
        <div class="carousel-item">
          <%= image_tag("landing_page/cappadocia_landing_page.jpg", class: "d-block w-100")  %>
        </div>
        <div class="carousel-item">
          <%= image_tag("landing_page/istanbul_2_landing_page.jpg", class: "d-block w-100")  %>
        </div>
        <div class="carousel-item">
          <%= image_tag("landing_page/istanbul_landing_page_3.jpg", class: "d-block w-100")  %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </section>
  <article class="container mb-5 mt-2">
    <div class="row">
      <div class="col-lg-4 text-center">
        <i class="far fa-thumbs-up"></i>
        <h5>Free cancellation</h5>
        <p>Don't stress if your plans change. Cancel up to 24 hours before your activity starts for a full refund.</p>
      </div>
      <div class="col-lg-4 text-center">
        <i class="fas fa-meteor"></i>
        <h5>Faster access</h5>
        <p>Skip the long ticket lines and get straight to the good stuff in the places everyone wants to visit.</p>
      </div>
      <div class="col-lg-4 text-center">
        <i class="far fa-heart"></i>
        <h5>Friendly help</h5>
        <p>We're standing by 24/7 to make your experience incredible. Reach us by phone, email, or WhatsApp.</p>
      </div>
    </div>
  </article>

    <section>
    <div class="container">
        <h1 class="text-center mt-5 mb-5">Explore Our Hot Deals</h1>
    </div>

  </section>
  <section>
    <div class="container trusted-by">
      <div class="row ml-4">
        <div><h1 class="trusted-text text-left mt-5">Trusted By:</h1></div>
        <div><i class="fab fa-cc-paypal m-4 pl-4"></i></div>
        <div><i class="fab fa-tripadvisor m-4 pl-4"></i></div>
        <div><i class="fab fa-cc-stripe m-4 pl-4"></i></div>
        <div><i class="fab fa-google-pay m-4 pl-4"></i></div>
      </div>
    </div>
  </section>
  <section>
    <div class="container">
        <h1 id="anchor-tag" class="text-center mt-5 mb-5">Explore Our Top Destinations</h1>
        <div class="text-center mb-5">
          <% ActsAsTaggableOn::Tag.all.each do |tag| %>
            <%= link_to tag, tours_path(tag: tag.name, anchor: "anchor-tag" ), class: "btn-taggable d-inline-block mb-3" %>
          <% end %>
        </div>
    </div>
    <div class="container">
      <div class="row">
        <% @tours.each do |tour| %>
        <div class="card-trip col-lg-5 m-4 px-0 py-0">
          <%= cl_image_tag tour.photos[0].key, class: "card-tour-img", alt: "#{tour.title} Picture"  %>
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to tour.title, tour_path(tour) %></h2>
              <p><%= tour.description %></p>
            </div>
            <h2 class="card-trip-pricing">Â£<%= tour.price %></h2>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </section>
</main>
