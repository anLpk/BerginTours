<header>
  <section class="d-flex justify-content-between first-nav">
    <div class="social-icons d-flex mt-4 ml-3">
      <%= link_to "https://www.instagram.com/anlpak/", :target => "_blank" do %>
        <i class="fab fa-instagram pl-2"></i>
      <% end %>

      <%= link_to "https://www.tripadvisor.com.au/", :target => "_blank" do %>
        <i class="fab fa-tripadvisor pl-4"></i>
      <% end %>
    </div>
    
    <div class="profile-container d-flex mt-3 mr-3">
      <ul>
        <% if current_user.nil? %>
          <li>
            <%= link_to new_user_session_path, class: "pr-3" do %>
              <i class="fas fa-user-plus"></i>
            <% end %>
            <button class="btn-signup mr-2"><%= link_to "Sign Up", new_user_registration_path %></button>
          </li>
        <% else %>
          <li>
            <%= link_to "Cart (#{@user_cart.bookings.size})", cart_path(@user_cart), class: "pr-2" %>
       
            <%= link_to dashboard_path, class: "pr-2" do %>
              <i class="far fa-user-circle"></i>
            <% end %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "pr-2" %>
          </li>
        <% end %>
      </ul>
    </div>
  </section>
  <section class="d-flex justify-content-center">
  <nav class="navbar navbar-expand-lg navbar-light justify">
