<div class="container">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="card-trip col-lg-4 px-0 py-0 mt-5">
        <%= cl_image_tag article.photos[0].key, class: "article-img", alt: "#{article.title} Picture"  %>
          <div class="card-trip-infos">
            <div>
              <h3 class="card-title"> <%= link_to article.title, article_path(article) %></h3>
              <p>Written by <%= article.author %></p>
            </div>
            <h2 class="card-trip-pricing">#History #MiddleEast</h2>
            <%= cl_image_tag article.photos[1].key, class: "card-trip-user avatar-bordered", alt: "#{article.author} Image"  %>
          </div>
      </div>
    <% end %>
  </div>
</div>
