<div class="container">
  <div class="text-center">
    <h1>Articles</h1>
  </div>
  <% @articles.each do |article| %>
    <div class="card" style="width: 18rem;">
      <%= cl_image_tag article.photos[0].key, class: "article-img card-img-top", alt: "#{article.title} Picture"  %>
        <div class="card-body">
          <h3 class="card-title"> <%= article.title %></h3>
          <p class="card-text">
            <%= cl_image_tag article.photos[1].key, class: "author-img card-img-top", alt: "#{article.author} Image"  %>
            <%= article.author %>
          </p>
          <p class="card-text"><small class="text-muted">Created at: <%= article.created_at %></small></p>
          <%= link_to "Continue Reading", article_path(article), class: "btn btn-primary" %>
        </div>
    </div>
  <% end %>
</div>
