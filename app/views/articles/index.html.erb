<div class="container">
  <header class="blog-header py-3">
      <div class="text-center">
        <%= link_to "Bergin Tours Travel Articles", articles_path, class: "blog-header-logo text-dark h3" %>
      </div>
  </header>
  <div class="nav-scroller py-1 mb-2">
    <nav class="nav d-flex justify-content-between">
    </nav>
  </div>
</div>
<section class="blog-banner">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1605213605677-861baf60c228?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=967&q=80);">
    <div class="container">
      <h1>Lorem <strong>ipsum</strong> dolor <strong>sit amet consectetur</strong>!</h1>
      <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Distinctio ipsa tempore sint ipsum itaque, doloribus cupiditate? Laboriosam error quis nam maxime.</p>
    </div>
  </div>
</section>

<main class="container">
  <h1 id="anchor-tag" class="text-center mt-5 mb-5">Explore Our Top Destinations</h1>
  <div class="text-center mb-5">
    <% ActsAsTaggableOn::Tag.all[0..4].each do |tag| %>
      <%= link_to tag, articles_path(tag: tag.name, anchor: "anchor-tag" ), class: "btn-taggable article-btn d-inline-block mb-3" %>
    <% end %>
  </div>

  <div class="row card-body">
    <% @articles.each do |article| %>
      <div class="col-12 col-sm-8 col-md-6 col-lg-4 mb-5">
        <div class="card">
          <%= cl_image_tag article.photos[0].key, class: "card-img", alt: "#{article.title} Picture"  %>
          <div class="card-img-overlay">
            <button class="btn btn-light btn-sm"><%= article.tag_list %></button>
          </div>
          <div class="card-body">
            <h4 class="card-title"><%= article.title %></h4>
            <small class="text-muted cat">
              <i class="far fa-clock text-info"></i> 30 minutes
              <i class="fas fa-users text-info"></i> 4 portions
            </small>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
            <%= link_to "Continue reading", article_path(article), class: "btn btn-info" %>
          </div>
          <div class="card-footer text-muted d-flex justify-content-between bg-transparent border-top-0">
            <div class="views"><%= article.created_at.strftime('%a, %d %b %Y') %></div>
            <div class="stats">
           	  <i class="far fa-eye"></i> 1347
              <i class="far fa-comment"></i> <%= article.author %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</main>
